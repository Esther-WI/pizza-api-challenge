{
  "info": {
    "name": "Pizza API Challenge",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "GET /restaurants",
      "request": { "method": "GET", "url": "http://127.0.0.1:5000/restaurants" }
    },
    {
      "name": "GET /restaurants/:id",
      "request": {
        "method": "GET",
        "url": "http://127.0.0.1:5000/restaurants/1"
      }
    },
    {
      "name": "DELETE /restaurants/:id",
      "request": {
        "method": "DELETE",
        "url": "http://127.0.0.1:5000/restaurants/1"
      }
    },
    {
      "name": "GET /pizzas",
      "request": { "method": "GET", "url": "http://127.0.0.1:5000/pizzas" }
    },
    {
      "name": "POST /restaurant_pizzas",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\"price\":12,\"pizza_id\":1,\"restaurant_id\":1}"
        },
        "url": "http://127.0.0.1:5000/restaurant_pizzas"
      }
    }
  ]
}
